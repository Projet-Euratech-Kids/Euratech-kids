                    <a class="dropdown-item" href="{{ path('logout') }}">Se déconnecter</a>
                </div>
            {% else %}
            <a class="btn btn-outline-eura btn-sm mr-3" data-toggle="modal" data-target="#connexion">Connexion</a>
            <a class="btn btn-eura btn-sm mr-3" data-toggle="modal" data-target="#inscription">Inscription</a>
            {% endif %}
